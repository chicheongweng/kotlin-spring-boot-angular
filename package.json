{
  "name": "kotlin-spring-boot-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run generate-api && ng build",
    "watch": "ng build --watch --configuration development",
